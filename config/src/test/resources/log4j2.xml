<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j2-configuration>
<Configuration>
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} %-5level %logger{36}.%M(%L) - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="console" />
		</Root>
		<Logger name="org.jboss.weld"             level="debug" additivity="false">
			<AppenderRef ref="console" />
		</Logger>
        <Logger name="org.jboss.weld.environment" level="debug" additivity="false">
            <AppenderRef ref="console" />
        </Logger>
        <Logger name="org.jboss.weld.bootstrap"   level="debug" additivity="false">
            <AppenderRef ref="console" />
        </Logger>
	</Loggers>
</Configuration>